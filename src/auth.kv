#:kivy 1.11.1

<Auth>:
	# ids
	sign_up: sign_up

	anchor_x: 'center'
	anchor_y: 'center'

	UserSignUp:
		id: sign_up

		size_hint_x: .5

<UserSignUp>:
	orientation: 'vertical'

	size_hint_y: .3
	spacing: 10

	Label:
		text: 'Sign Up!'
		font_size: 26
	GridLayout:
		rows: 2
		cols: 2

		Label:
			text: 'Username'
		TextInput:
			id: username

			multiline: False
		Label:
			text: 'Password'
		TextInput:
			id: password

			multiline: False
			password: True

	Button:
		text: 'Sign Up'
		size_hint: .5, .5
		pos_hint: {'center_x': .6}

		on_press: root.user_sign_up(username.text, password.text)
